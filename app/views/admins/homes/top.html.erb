<div class="container">
  <div class="row">
    <h4 class="col">注文履歴一覧</h4>
    <table class="table">
      <thead>
        <tr class="table-header">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
          <tr>
            <td>
              <%= link_to admins_order_path(@order.id) do %>
                <%= @order.created_at.strftime('%Y/%m/%d %H:%M') %>
              <% end %>
            </td>
            <td>
              <%= link_to admins_customers_path(order.customer.id) do %>
                <%= @order.customer.first_name %><%= @order.customer.last_name %>
              <% end %>
            </td>
            <td><%= order.quantity %></td>
            <td>注文ステータス</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>