<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="px-5 py-4">
        <h4>商品新規登録</h4>
      </div>
      <div class="col-11 offset-1">
        <%=form_with model: @product, url: admins_products_path, local: true do |f| %>
          <div class="form-group row">
            <%= f.label :商品画像, class: 'col-md-3'%>
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="form-group row">
            <%= f.label :商品名, class: 'col-md-3'%>
            <%= f.text_field :name, class: "form-control col-md-5" %>
          </div>

          <div class="form-group row">
            <%= f.label :商品説明, class: 'col-md-3'%>
            <%= f.text_area :description, class: 'col-md-5 form-control'%>
          </div>

          <div class="form-group row">
            <%= f.label :ジャンル, class: 'col-md-3'%>
            <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください"},class: "col-md-5 form-control") %>
          </div>

          <div class="form-group row">
            <%= f.label :税抜価格, class: 'col-md-3'%>
            <%= f.text_field :tax_excluded_price, class: 'col-md-5 form-control'%>
            <span>円</span>
          </div>

          <div class="form-group row">
            <%= f.label :販売ステータス, class: 'col-md-3'%>
            <p class="col-md-2"><%= f.radio_button :is_status, "true" %>販売中</p>
            <p class="col-md-2"><%= f.radio_button :is_status, "false" %>販売停止</p>
          </div>

          <div class="form-group col-2 offset-4 mt-2">
            <%= f.submit '新規保存', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>