<div class="container">
  <div class="row">
    <div class="col-sm-12 col-xs-offset-1">
      <div class="col-11 offset-1">
      <h4>注文履歴詳細</h4>
        <table class="row table">
          <tbody>
          <tr>
            <th class="col-xs-2">購入者</th>
            <td class="col-xs-10">
              <%= @order.customer.first_name %>
              <%= @order.customer.last_name %></td>
          </tr>

          <tr>
            <th class="col-xs-2">注文日</th>
            <td class="col-xs-10">
              <%= @order.created_at.strftime('%Y/%m/%d') %>
            </td>
          </tr>

          <tr>
            <th class="col-xs-2">配送先</th>
            <td class="col-xs-10">
              <%= @customer.postal_code %>
              <%= @customer.address %>
            </td>
          </tr>

          <tr>
            <th class="col-xs-2">支払方法</th>
            <td class="col-xs-10"><%= @customer.address %></td>
          </tr>

          <tr>
            <th class="col-xs-'2">注文ステータス</th>
            <td class="col-xs-10">
              <%= form_for (@order), url:admins_order_path(@order) do |f| %>
              <%= f.select :status,Order.statuses.keys.map { |k| [t("enums.order.status.#{k}"), k] } %>
              <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
          </tbody>
        </table>

        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>

          <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.product.name %></td>
              <td><%= (order_detail.once_price).floor.to_s(:delimited,delimiter: ',') %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= (order_detail.once_price * order_detail.quantity).floor.to_s(:delimited,delimiter: ',') %></td>
              <td>
                <%= form_for (order_detail), url:admins_order_detail_path(order_detail) do |f| %>
                <%= f.select :product_order_status,OrderDetail.product_order_statuses.keys.map { |k| [t("enums.orderdetail_status.#{k}"), k] } %> %>
                <%= f.submit "更新", class: "btn btn-succsess" %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <br><br><br><br><br><br><br><br><br><br>
      <div class="col-xs-4">
      <table class="table">
        <tbody>

          <tr>
            <td>商品合計</td>
            <td><%= (@order.total_payment - @order.postage).to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr>
            <td>送料</td>
            <td><%= @order.postage.to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr>
            <td>請求合計金額</td>
            <td><%= @order.total_payment.to_s(:delimited, delimiter: ',') %></td>
          </tr>
        </tbody>
      </table>
     </div>
    </div>
  </div>
</div>
