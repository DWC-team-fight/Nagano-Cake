<div class="container">
  <div class="row">
    <div class=col-10>
      <h4>新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col">
            <div class="field">
              <%= f.label :名前（姓）%>
              <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :名前（名） %>
              <%= f.text_field :last_name, class:"form-control" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col">
            <div class="field">
              <%= f.label :フリガナ（姓） %>
              <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :フリガナ（名） %>
              <%= f.text_field :last_name_kana, class:"form-control" %>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %><br />
          <%= f.text_field :postal_code,  class:"form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address,  class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
        </div>

        <div class="actions">
          <%= f.submit "新規会員登録", class:"btn btn-success" %>
        </div>
      <% end %>

      <h4 class="mt-5" >既に会員済みの方</h4>
      <%= link_to "こちら",new_customer_session_path%>からログインをしてください

    </div>
  </div>
</div>