<div class="container">
  <%= render 'layouts/errors', obj: @genre %>
  <div class="row">
    <div class="col-6">
      <div class="px-5 py-4">
        <h4>ジャンル編集</h4>
      </div>
      <%= form_with model: @genre, url: admins_genre_path, local: true do |f| %>
        <%= f.label :"ジャンル名", class: 'mr-5 mt-5'%>
        <%= f.text_field :name, :placeholder => "ジャンル名", class: 'mr-5' %>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>