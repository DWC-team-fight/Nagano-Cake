<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h2>

    <%= render "layouts/errors", obj: @customer %>

    <%= form_with model:@customer,url:admin_customer_path(@customer.id) do |f| %>
      <table class="row table">
        <tr>
          <th class="col-xs-2"><%= f.label :会員ID %></th>
          <td class="col-xs-10"><%= f.text_field :id, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :氏名 %></th>
          <td class="col-xs-10"><%= f.text_field :first_name, class:"form-control"  %><br>
                                <%= f.text_field :last_name, class:"form-control"  %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :フリガナ %></th>
          <td class="col-xs-10"><%= f.text_field :first_name_kana, class:"form-control" %><br>
                                <%= f.text_field :last_name_kana, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :郵便番号 %></th>
          <td class="col-xs-10"><%= f.text_field :postal_code, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :住所 %></th>
          <td class="col-xs-10"><%= f.text_field :address, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :電話番号 %></th>
          <td class="col-xs-10"><%= f.text_field :phone_number, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :メールアドレス %></th>
          <td class="col-xs-10"><%= f.text_field :email, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :会員ステータス %></th>
          <td><%= f.select :is_customer_status,[["有効","false"],["退会","true"]], class:"from-control" %></td>
        </tr>
    </table>

        <div class="row text_light">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
    <% end %>
  </div>
</div>