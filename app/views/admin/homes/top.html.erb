<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-11 offset-1">
        <h4 class="py-3">注文履歴一覧</h4>
        <table class="table">
          <thead>
            <tr class="table-warning">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |orders| %>
              <tr>
                <td>
                  <%= link_to admins_order_path(orders.id) do %>
                    <%= orders.created_at.strftime('%Y/%m/%d %H:%M') %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admins_customers_path(orders.customer.id) do %>
                    <%= orders.customer.first_name %><%= orders.customer.last_name %>
                  <% end %>
                </td>
                <td><%= orders.order_details.sum(:quantity) %></td>
                <td><%= orders.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>