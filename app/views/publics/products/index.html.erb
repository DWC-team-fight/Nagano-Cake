<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h1>商品一覧</h1><h4>(全<%= @total_products.count %>件)</h4>
    </div>
  </div>
  <div class="row mt-3 text-center text-xs-center text-sm-center text-md-left">
    <% @products.each do |prodact| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
          <p class="img-wrap"><%= image_tag product.get_image(180, 120) %></p>
       <div class="card-body">
          <p class="prodact-details prodact-name card-text"><%= product.name %></p>
          <% if product.is_active == true %>
            <p class="prodact-details card-text">¥<%= (prodact.price * 1.08).to_i.to_s(:delimited, delimiter: ',') %></p>
          <% else %>
            <p class="text-danger font-weight-bold card-text">売り切れ</p>
          <% end %>
        </div>
      </div>
     </div>
     <% end %>
  </div>
       <%= paginate(@products) %>
</div>


