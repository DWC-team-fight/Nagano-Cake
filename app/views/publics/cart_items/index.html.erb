<div class="container">
  <div class="row">
    <div class="col">
      
      <h3>ショッピングカート</h3>
      <span>
        <%= link_to "カートを空にする",cart_items_path, method: "delete",data:{confirm:"本当に空にしますか？"},class:"btn btn-danger" %>
      </span>
      <table class="table table-striped" >
        <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </thead>
        <tbody>
        <% @合計金額 = 0 %>
        <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%= cart_item.product.name %></td>
              <td><%= cart_item.item.with_tax_price %></td><!--単価*1.1-->
              <td><%= cart_item.subtotal %></td><!--単価*1.1*個数-->
              <% @合計金額 +=  cart_item.subtotal %>
            </tr>
        <% end %>
        </tbody>
      </table>
      
      <%= link_to "買い物を続ける",root_path,class:"btn btn-info" %>
      
      <div class="row">
        <div class="col-5"></div>
        <div class="col-2">
          <%= link_to "情報入力に進む", new_order_path,class:"btn btn-success" %>
        </div>
        <div class="col-5"></div>
      </div>

    </div>
  </div>
</div>
