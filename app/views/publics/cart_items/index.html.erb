<div class="container">
  <div class="row">
    <div class="col">

      <table>
        <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </thead>
        <tbody>
        <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item %></td>
              <td><%= cart_item.item.with_tax_price %></td><!--単価*1.1-->
              <td><%= cart_item.subtotal %></td><!--単価*1.1*個数-->
              <% @合計金額 +=  cart_item.subtotal %>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>