<div class="container">
  <h3>注文履歴詳細</h3>
  <div class="row">
    
    <div class="col-8">
      <p>注文情報</p>
      <table class="table table-striped">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.delivery_postal_code%>
          <%= @order.delivery_address %>
          <%= @order.delivery_name%>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status_i18n %></td>
      </tr>
      </table>
    </div>
    
    <div class="col-4">
      <p>請求情報</p>
      <table class="table table-striped">
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_amount %>円</td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shopping_fee %>円</td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= (@order.total_amount) + (@order.shopping_fee) %>円</td>
      </tr>
      </table>
    </div>
    
    <div class="col-10">
      <table class="table table-striped">
        <tr>
          <th>商品</th><th>単価（税込）</th><th>個数</th><th>小計</th>
        </tr>
        <% @order.order_details.each do |f| %>
        <tr>
          <td><%= f.product.name %></td>
          <td><%= f.product.with_tax_price %>円</td>
          <td><%= f.quantity %>個</td>
          <td><%= f.product.with_tax_price*f.quantity %></td>
        </tr>
        <% end %>
      </table>
    </div>
    
  </div>
</div>