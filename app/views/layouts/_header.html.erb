<header>
  <div class="container">
    <div class="d-flex flex-row justify-content-between">
      <nav class="nav navbar-nav">
        <h1 class="sample">
          <%= link_to 'Nagano-Cake', root_path, html_options: { style: "font-family: Comic Sans MS; color: #99FFFF;" } %>
        </h1>
      </nav>
      <nav class="navbar navbar-expand">
        <ul class="nav navbar-nav" style="margin-top: 30px;">
          <% if customer_signed_in? %>
            <!-- 顧客がログインしている場合 -->
            <li class="nav-item">
              <p class="nav-link" style="font-family: serif; margin-top: 15px;">
                ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
              </p>
            </li>
            <li class="nav-item">
              <%= link_to "マイページ", public_customers_mypage_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", products_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
          <% elsif admin_signed_in? %>
            <!-- 管理者がログインしている場合 -->
            <li class="nav-item">
              <%= link_to "商品一覧", admin_products_path, class: "nav-link button", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: "nav-link button", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_root_path, class: "nav-link button", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link button", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link button", style: "font-family: serif; color: #000000;" %>
            </li>
          <% else %>
            <!-- ログインしていない場合 -->
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", products_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: "nav-link", style: "font-family: serif; color: #000000;" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
    <div class="d-flex flex-row justify-content-end"> <!-- 検索フォームのdiv要素を追加 -->
      <%= render 'layouts/search' %>
    </div>
  </div>
</header>