<header>
  <div class="container">
    <div class="d-flex flex-row">
      <div class="col">
        <nav class="nav navbar-nav navbar-left">
          <h1 class="sample"><%= link_to 'Nagano-Cake', root_path,date: {"turbolinks" => false}, style: "font-family: Comic Sans MS; color: #99FFFF;" %></h1>
        </nav>
      </div>
      <div class="col ">
        <nav class="navbar navbar-expand">
          <ul class="nav navbar-nav navbar-right mr-6 ml-6" style="margin-top: 30px;">
            <% if customer_signed_in? %>
              <!--顧客がログインしている場合-->
              <li style="font-family: serif; margin-top: 15px;">
                ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
              </li>
              <li><%=link_to "マイページ",public_customers_mypage_path,style: "font-family: serif; color: #000000;" %></li>
              <li><%=link_to "商品一覧",products_path,style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;">|</li>
              <li><%=link_to "カート",cart_items_path,style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>
              <li><%=link_to "ログアウト",destroy_customer_session_path, method: :delete, style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>

            <% elsif admin_signed_in? %>
              <!--管理者がログインしている場合-->
              <li><%=link_to "商品一覧",admin_products_path,style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>
              <li><%=link_to "会員一覧",admin_customers_path,style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>
              <li><%=link_to "注文履歴一覧",admin_root_path,style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>
              <li><%=link_to "ジャンル一覧",admin_genres_path,style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>
              <li><%=link_to "ログアウト",destroy_admin_session_path, method: :delete, style: "font-family: serif; color: #000000;" %></li>
              <li style="font-family: serif; margin-top: 15px; color: #696969;"></li>

            <% else %>

              <!--ログインしていない場合-->
              <li><%=link_to "About",about_path,style: "font-family: serif; color: #000000;" %></li>
              <li><%=link_to "商品一覧",products_path,style: "font-family: serif; color: #000000;" %></li>
              <li><%=link_to "新規登録",new_customer_registration_path,style: "font-family: serif; color: #000000;" %></li>
              <li><%=link_to "ログイン",new_customer_session_path,style: "font-family: serif; color: #000000;" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>